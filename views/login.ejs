<%- include('./head'); %>
    <%- include('./navbar', {auth: false}); %>
        <% if (messages.error) { %>
            <%= messages.error %>
                <% } %>
                    <div class="min-h-screen min-w-full bg-purple-200 flex flex-col items-center">
                        <div
                            class="bg-purple-200 mt-20 py-4 px-6 shadow-2xl rounded-2xl flex flex-col items-center">
                            <h2 class="text-4xl font-semibold text-center mb-16 text-purple-900">Авторизация</h2>
                            <form action="/login" method="POST" class="flex flex-col items-center w-96 h-72 m-0">
                                <div class="flex flex-col mb-2 w-80">
                                    <label for="email" class="italic">Email</label>
                                    <input type="email" id="email" name="email"
                                        class="border-1 border-purple-800 bg-purple-100 rounded-xl px-2 py-px" required>
                                </div>
                                <div class="flex flex-col w-80">
                                    <label for="password" class="italic">Пароль</label>
                                    <input type="password" id="password" name="password"
                                        class="border-1 border-purple-800 bg-purple-100 rounded-xl px-2 py-px" required>
                                </div>
                                <button type="submit"
                                    class="bg-purple-800 border-0 rounded-xl py-2 px-4 w-28 text-purple-100 mt-8">
                                    Войти
                                </button>
                            </form>
                            <a href="/register" class="underline underline-offset-1 mb-2">Регистрация</a>
                        </div>
                    </div>
                    </div>